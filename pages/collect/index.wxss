.collect_main {
  background-color: #fff;
}
.collect_main .collect_title {
  padding: 25rpx 0;
}
.collect_main .collect_title .collect_tips {
  padding: 10rpx;
  margin-left: 20rpx;
  border: 2rpx solid #ccc;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border: 2rpx solid currentColor;
}
.collect_content navigator {
  border-bottom: 2rpx solid #ccc;
  display: flex;
}
.collect_content navigator .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_content navigator .goods_img_wrap image {
  width: 70%;
}
.collect_content navigator .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_content navigator .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_content navigator .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
