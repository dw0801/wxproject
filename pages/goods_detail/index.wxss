page {
  padding-bottom: 90rpx;
}
.detail_swiper swiper {
  height: 60vw;
  text-align: center;
}
.detail_swiper swiper swiper-item image {
  width: 60%;
}
.goods_price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.goods_name_row {
  display: flex;
  border-top: 8rpx solid var(--themebgc);
  border-bottom: 8rpx solid var(--themebgc);
  padding: 10rpx 0;
}
.goods_name_row .goods_name {
  flex: 5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #000;
  font-size: 30rpx;
  padding: 0 20rpx;
  border-right: 2rpx solid #ccc;
}
.goods_name_row .goods_collet {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goods_name_row .goods_collet .icon-shoucang1 {
  color: orangered;
}
.good_info .goods_info_title {
  display: block;
  width: 100%;
  height: 40rpx;
  padding: 20rpx;
  line-height: 40rpx;
  color: var(--themeColor);
  font-weight: 700;
  font-size: 40rpx;
  border-bottom: 8rpx solid var(--themebgc);
}
.btm_tool {
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.btm_tool .tool_item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}
.btm_tool .btn_buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}
